{
  "name": "obh-desktop-system",
  "version": "1.0.0",
  "description": "OBH Desktop System Application",
  "main": "index.js",
  "author": "Leo <chavezleo518@gmail.com>",
  "license": "ISC",
  "type": "commonjs",
  
  "scripts": {
    "dev": "concurrently \"npm run start:server\" \"npm run start:electron\"",
    "start": "electron .",
    "start:server": "nodemon src/backend/server.js",
    "start:electron": "electronmon .",
    "build": "electron-builder",
    "build:dev": "electron-builder --publish=never",
    "build:prod": "electron-builder --publish=always",
    "build-win": "npm run build:prod -- --win",
    "build-mac": "npm run build:prod -- --mac",
    "build-linux": "npm run build:prod -- --linux",
    "postinstall": "electron-builder install-app-deps"
  },

  "build": {
    "appId": "com.obh.desktop",
    "productName": "OBH Desktop System",
    "copyright": "Copyright Â© 2025 OBH System",
    
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    
    "files": [
      "index.js",
      "preload.js",
      "src/**/*",
      "package.json",
      "config.json", 
      "!**/*.test.js",
      "!**/*.spec.js",
      "node_modules/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/*.ts",
      "!node_modules/**/{test,tests,example,examples,docs}",
      "!node_modules/.bin"
    ],
    
    "extraResources": [
      {
        "from": "config.json",
        "to": "." 
      }
    ],

    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OBH Desktop System"
    },

    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.productivity"
    },

    "linux": {
      "target": "AppImage",
      "icon": "build/icons/icon.png",
      "category": "Office"
    }
  },

  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^38.5.0",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.3",
    "nodemon": "^3.1.10"
  },

  "dependencies": {
    "@picocss/pico": "^2.1.1",
    "@supabase/supabase-js": "^2.78.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "google-auth-library": "^10.4.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1"
  },

  "engines": {
    "node": ">=16.0.0"
  }
}